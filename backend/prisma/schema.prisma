generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   Int      @id @default(autoincrement())
  username             String   @unique
  email                String   @unique
  password             String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  firstName            String?
  isOnboardingComplete Boolean  @default(false)
  lastName             String?
  phone                String?
  isVerified           Boolean    @default(false)
  otpTokens            OtpToken[]

  @@map("users")
}

model OtpToken {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  code      String
  type      OtpType
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@map("otp_tokens")
}

enum OtpType {
  VERIFY_EMAIL
  RESET_PASSWORD
}
